<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:id => "sign_in"}, :format => :json, :remote => true) do |f| %>

<%= devise_error_messages! %>

  <%= f.label :email, :class => 'label' %>
  <%= f.email_field :email, :class => 'input', :autofocus => true %>

  <%= f.label :password, :class => 'label' %>
  <%= f.password_field :password, :class => 'input' %>

  <% if devise_mapping.rememberable? -%>
  	<%= f.label :remember_me, :class => 'remember_me' %> <%= f.check_box :remember_me, :class => 'remember_me_check' %> 
  <% end -%>

  <%= f.submit "Sign in", :class => 'submit'%>

<% end %>

