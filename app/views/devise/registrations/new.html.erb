<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => "sign_up"}, :format => :json, :remote => true) do |f| %>

  	<div><%= f.label :email, :class => 'label_register' %><br />
  	<%= f.email_field :email, :class => 'input', :autofocus => true %></div>

  	<div><%= f.label :password, :class => 'label_register' %><br />
  	<%= f.password_field :password, :class => 'input' %></div>

  	<div><%= f.label 'Confirm Password', :class => 'label_register' %><br />
  	<%= f.password_field :password_confirmation, :class => 'input' %></div>

  	<div><%= f.submit "Register",  :class => 'submit_register' %></div>
	<div id="sign_up_errors"></div>
	
<% end %>


