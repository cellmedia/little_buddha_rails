<!--Form for contact-->
<%= form_for @contact, :remote => true do |f| %>

	<%= f.label :email, :class => 'label' %>
	<%= f.text_field :email, :class => 'input' %>
	<div id="contact_errors"></div>

	<%= f.label :body, "Question",  :class => 'label_contact' %>
	<%= f.text_area :body, :class => 'input_contact' %>

	<%= f.submit "Submit", :class => 'submit_contact' %>
	
<% end %>


